# License Scan Agent - Night 64 Implementation
# OSS Review Toolkit (ORT) integration - fail pipeline on GPL licenses

FROM python:3.12-slim

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
ENV ORT_VERSION=1.5.0
ENV ORT_HOME=/opt/ort
ENV PATH="${ORT_HOME}/bin:${PATH}"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Java runtime for ORT
    openjdk-11-jdk \
    # Build tools and utilities
    wget \
    curl \
    git \
    unzip \
    # Package managers that ORT might need to analyze
    nodejs \
    npm \
    maven \
    gradle \
    # Python development dependencies
    build-essential \
    # Clean up
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install OSS Review Toolkit (ORT)
RUN mkdir -p /opt \
    && wget -O /tmp/ort.tar.gz \
       "https://github.com/oss-review-toolkit/ort/releases/download/${ORT_VERSION}/ort-${ORT_VERSION}.tar.gz" \
    && tar -xzf /tmp/ort.tar.gz -C /opt/ \
    && mv "/opt/ort-${ORT_VERSION}" "${ORT_HOME}" \
    && chmod +x "${ORT_HOME}/bin/ort" \
    && rm /tmp/ort.tar.gz

# Verify ORT installation
RUN ort --version

# Set up Python environment
WORKDIR /app

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY license_scan_agent.py .
COPY license_main.py .

# Copy shared dependencies
COPY ../shared/ ./shared/

# Create non-root user for security
RUN groupadd -r license_agent && useradd -r -g license_agent license_agent

# Create directories for ORT operations
RUN mkdir -p /app/workspace /app/results \
    && chown -R license_agent:license_agent /app

# Switch to non-root user
USER license_agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8087/health || exit 1

# Expose port
EXPOSE 8087

# Set environment variables for the application
ENV HOST=0.0.0.0
ENV PORT=8087
ENV PYTHONPATH=/app:/app/shared

# Command to run the application
CMD ["python", "license_main.py"] 
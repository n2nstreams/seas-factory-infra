# Hosting & Canary Deployment Configuration - Module 10
# Copy this file to .env.local and fill in your actual values

# Vercel Configuration
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_TOKEN=your_vercel_token

# Domain Configuration
NEXT_PUBLIC_DOMAIN=your-domain.com
NEXT_PUBLIC_VERCEL_URL=https://your-project.vercel.app

# Canary Deployment Configuration
NEXT_PUBLIC_CANARY_ENABLED=true
NEXT_PUBLIC_CANARY_INITIAL_TRAFFIC=10
NEXT_PUBLIC_CANARY_ROLLBACK_THRESHOLD=0.05
NEXT_PUBLIC_CANARY_HEALTH_CHECK_ENDPOINT=/api/health
NEXT_PUBLIC_CANARY_METRICS_ENDPOINT=/api/canary/metrics

# Feature Flags for Hosting
NEXT_PUBLIC_FEATURE_HOSTING_V2=true
NEXT_PUBLIC_FEATURE_CANARY_DEPLOYMENT=true
NEXT_PUBLIC_FEATURE_VERCEL_HOSTING=true

# TLS and Security Configuration
NEXT_PUBLIC_TLS_VERSION=1.3
NEXT_PUBLIC_HSTS_ENABLED=true
NEXT_PUBLIC_HSTS_MAX_AGE=31536000
NEXT_PUBLIC_CSP_ENABLED=true

# Cache and Performance Configuration
NEXT_PUBLIC_CACHE_MAX_AGE=300
NEXT_PUBLIC_CACHE_S_MAX_AGE=600
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_COMPRESSION_ENABLED=true

# Monitoring and Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
NEXT_PUBLIC_CANARY_MONITORING_ENABLED=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Backend API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-api.com
NEXT_PUBLIC_HEALTH_API_URL=https://your-backend-api.com/health

# Canary Rollout Strategy
NEXT_PUBLIC_CANARY_PHASE_1_TRAFFIC=10
NEXT_PUBLIC_CANARY_PHASE_2_TRAFFIC=25
NEXT_PUBLIC_CANARY_PHASE_3_TRAFFIC=50
NEXT_PUBLIC_CANARY_PHASE_4_TRAFFIC=75
NEXT_PUBLIC_CANARY_FINAL_TRAFFIC=100

# Rollback Triggers
NEXT_PUBLIC_ROLLBACK_ERROR_RATE_THRESHOLD=0.05
NEXT_PUBLIC_ROLLBACK_RESPONSE_TIME_THRESHOLD=5000
NEXT_PUBLIC_ROLLBACK_UPTIME_THRESHOLD=0.95
NEXT_PUBLIC_ROLLBACK_USER_SATISFACTION_THRESHOLD=0.8

# Health Check Configuration
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000
NEXT_PUBLIC_HEALTH_CHECK_TIMEOUT=5000
NEXT_PUBLIC_HEALTH_CHECK_RETRIES=3

# SEO and Marketing Routes
NEXT_PUBLIC_SEO_ENABLED=true
NEXT_PUBLIC_MARKETING_ROUTES_ENABLED=true
NEXT_PUBLIC_APP_ROUTES_ENABLED=true

# Development and Staging
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_STAGING_URL=https://staging.your-domain.com
NEXT_PUBLIC_PRODUCTION_URL=https://your-domain.com

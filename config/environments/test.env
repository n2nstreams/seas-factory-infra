# SaaS Factory - Test Environment Configuration
# This file contains test-specific settings

# Application Settings
ENVIRONMENT=test
DEBUG=true
LOG_LEVEL=DEBUG
APP_NAME="SaaS Factory Test"
APP_VERSION="1.0.0-test"

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=factorydb_test
DB_USER=factoryadmin
DB_PASSWORD=${DB_PASSWORD}
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=30

# Google Cloud Platform
PROJECT_ID=summer-nexus-463503-e1
GOOGLE_CLOUD_REGION=us-central1
MONITORING_ENABLED=false
SECRET_MANAGER_ENABLED=false

# AI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
GOOGLE_AI_ENABLED=true
GOOGLE_AI_MODEL=gemini-1.5-pro
MODEL_PROVIDER=openai

# Security Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Service URLs (Local Test Environment)
ORCHESTRATOR_URL=http://localhost:8080
API_GATEWAY_URL=http://localhost:8000
TECHSTACK_AGENT_URL=http://localhost:8081
DESIGN_AGENT_URL=http://localhost:8082
DEV_AGENT_URL=http://localhost:8083
REVIEW_AGENT_URL=http://localhost:8084
UI_DEV_AGENT_URL=http://localhost:8085
QA_AGENT_URL=http://localhost:8086

# External Services
FIGMA_API_URL=https://api.figma.com
GITHUB_API_URL=https://api.github.com
STRIPE_API_URL=https://api.stripe.com
STRIPE_API_KEY=${STRIPE_API_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Cache Configuration
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TTL=3600
MEMORY_CACHE_ENABLED=true
MEMORY_CACHE_SIZE=1000

# Notifications
SENDGRID_API_KEY=${SENDGRID_API_KEY}
ALERT_EMAIL=test@saasfactory.com
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
SLACK_CHANNEL=#test-alerts

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=50
WEBSOCKET_PING_INTERVAL=30

# Feature Flags
ENABLE_AUTO_COMMIT=false
ENABLE_AUTO_PR=false
TENANT_ISOLATION_ENABLED=true

# Test-specific settings
ENABLE_DEBUG_TOOLBAR=true
ENABLE_MOCK_SERVICES=true
SKIP_AUTH_IN_DEV=true 